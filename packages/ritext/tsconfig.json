{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "lib": [
      "es5",
      "ES2015",
      "ES2016",
      "DOM",
      "ESNext"
    ],
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "module": "ES2015",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "target": "ES6"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}